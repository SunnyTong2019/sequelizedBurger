<img src="/assets/img/Burger.png" alt="burger icon">

<h1>Eat-Da-Burger!</h1>

<div id="allBurgers">

    <div id="nonDevoured">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <div class="newBurger">
                {{this.id}}. {{this.burger_name}}
                <form id="customerDevourBurger">
                    <input type="text" name="customer" placeholder="Customer?"></input>
                    <button type="submit" data-burgerid="{{this.id}}" class="devourBurger">Devour It !</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div id="devoured">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <p>{{this.id}}. {{this.burger_name}}   (Eatten by {{this.Customer.customer_name}})</p>
            {{/if}}
            {{/each}}
        </ul>
    </div>

</div>

<form id="addBurger">
    <textarea type="text" name="burger"></textarea>
    <br>
    <button type="submit" id="submit">Submit</button>
    <p>Enter a burger you want to eat and submit.</p>
</form>

<script type="text/javascript">

    $("#addBurger").on("submit", function (event) {

        event.preventDefault();

        var burger = $("#addBurger [name=burger]").val().trim();

        if (!burger) {
            alert("Please enter a burger!");
        } else {
            var newBurger = {
                burger: burger
            };

            $.ajax("/api/burgers", {
                type: "POST",
                data: newBurger
            }).then(
                function () {
                    location.reload();
                }
            );
        }
    });


    $(".devourBurger").on("click", function (event) {

        event.preventDefault();

        var id = $(this).data("burgerid");
        var customer = $("#customerDevourBurger [name=customer]").val().trim();

        if (!customer) {
            alert("Please enter a customer!");
        } else {
            var newCustomer = {
                customer_name: customer,
            };

            $.ajax("/api/customers", {
                type: "POST",
                data: newCustomer
            }).then(
                function (result) {

                    // send a put request for updating Burgers table
                    $.ajax("/api/burgers/" + id, {
                        type: "PUT",
                        data: { CustomerId: result }
                    }).then(
                        function (results) {
                            location.reload();
                        }
                    );
                }
            );
        }
    });

</script>